@model Repository.Models.AboutPolicy
@{
    ViewData["Title"] = "Yeni Şöbə";
}
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Yeni Policy</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Vəziyyəti</label>
                    <div class="custom-control custom-radio custom-control-inline ml-3">
                        <input type="radio" id="Status" value="true" name="Status" class="custom-control-input" @(Model.Status ? "checked" : "")>
                        <label class="custom-control-label" for="Status">Aktiv</label>
                        <span class="field-validation-valid text-danger" asp-validation-for="Status"></span>

                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="StatusFal" value="false" name="Status" class="custom-control-input"@(Model.Status ? "" : "checked")>
                        <label class="custom-control-label" for="StatusFal">Passiv</label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PolicyCount">Sayi</label>
                    <input class="form-control form-control-user slug-source" asp-for="PolicyCount" min="0">
                    <span class="field-validation-valid text-danger" asp-validation-for="PolicyCount"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PolicySubTitle">Basliq</label>
                    <input class="form-control form-control-user slug-source" asp-for="PolicySubTitle">
                    <span class="field-validation-valid text-danger" asp-validation-for="PolicySubTitle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PolicySubText">Text</label>
                    <textarea class="form-control form-control-user slug-source" asp-for="PolicySubText"><</textarea>
                    <span class="field-validation-valid text-danger" asp-validation-for="PolicySubText"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ActionText">Url</label>
                    <input class="form-control form-control-user slug-source" asp-for="ActionText">
                    <span class="field-validation-valid text-danger" asp-validation-for="ActionText"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AboutUsId">Haqqmizda</label>
                    <select asp-for="AboutUsId" class="form-control">
                        <option value="0" selected disabled>Secin</option>
                        @foreach (var item in ViewBag.AboutUs)
                        {
                            <option value="@item.Id">@item.AboutTitle</option>
                        }
                    </select>
                    <span class="field-validation-valid text-danger" asp-validation-for="AboutUsId"></span>

                </div>
                <div class="form-group d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Yenile</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /.container-fluid -->


@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}










