 @model HomeViewModel
@{ 
    int count = 0;
    int say = 0;
}
 <!-- start page-title -->
<section class="page-title" style="background-image:url(/uploads/@Model.Settings.ElementAt(0).CoverImage)">
    <div class="page-title-container">
        <div class="page-title-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col col-xs-12">
                        <h2>Case studies</h2>
                        <ol class="breadcrumb">
                            <li><a href="index.html">Home</a></li>
                            <li>Case studies</li>
                        </ol>
                    </div>
                </div> <!-- end row -->
            </div> <!-- end container -->
        </div>
    </div>
</section>
<!-- end page-title -->
<!-- start project-single-section -->
<section class="project-single-section section-padding">
    <div class="container">
        <div class="row">
            <div class="col col-md-6">
                <div class="img-holder">
                    <img src="~/uploads/@Model.CaseStudies.Image" alt="@Model.CaseStudies.Image">
                </div>
            </div>
            <div class="col col-md-6">
                <div class="project-details">
                    <h2>@Model.CaseStudies.Title</h2>
                    <h3>@Model.CaseStudies.Subtitle</h3>
                    <p>@Model.CaseStudies.Text</p>
                    <div class="project-info">
                        <ul class="clearfix">
                            @foreach (var item in Model.CaseStudies.CaseStudiesSpecs)
                            {
                                <li><span>@item.Key</span> @item.Value</li>

                            }
                            @*<li><span>Location:</span> Austria</li>
        <li><span>Date:</span> Jan 25, 2020</li>
        <li><span>Catetory:</span> Life insurance</li>
        <li><span>Time:</span> 6 Month</li>
        <li><span>Tags:</span> Insurance, Policy </li>*@
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12">
                <div class="project-single-tab clearfix">
                    <ul class="nav">
                        @foreach (var item in Model.Solutions)
                        {
                            count++;
                            if (count == 1)
                            {
                                <li class="active">
                                    <a href="#@item.Id" data-toggle="tab">@item.Key</a>
                                </li>

                            }
                            else
                            {
                                <li>
                                    <a href="#@item.Id" data-toggle="tab">@item.Key</a>
                                </li>
                            }
                        }

                        @*<li>
                            <a href="#intelligence" data-toggle="tab">Solution</a>
                        </li>
                        <li>
                            <a href="#specializations" data-toggle="tab">Results</a>
                        </li>*@
                    </ul>

                    <div class="tab-content">
                        @foreach (var item in Model.Solutions)
                        {
                            say++;

                            if (say == 1)
                            {
                                <div class="tab-pane fade in active" id="@item.Id">
                                    <p>@item.Value</p>
                                </div>
                            }
                            else
                            {
                                <div class="tab-pane fade" id="@item.Id">
                                    <p>@item.Value</p>
                                </div>
                            }
                        }
