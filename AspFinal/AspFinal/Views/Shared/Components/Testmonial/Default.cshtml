@model IEnumerable<Testimonial>
@foreach (var item in Model)
{
    <div class="testimonials-slider-item">
        <div class="grid">
            <p>@item.Review</p>
            <div class="quoter">
                <h4>@item.Name</h4>
                <span>@item.WorkExperience</span>
            </div>
        </div>
    </div>
}

